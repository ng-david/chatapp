<!--Modal-->
<div id="loginModal" class="login-modal">
  <div class="heading">
    <h1>Welcome to Chinglish.</h1>
    <h2>欢迎来到中式英语。</h2>
  </div>
  <div id="err" class="err">
    <p>Please enter a valid name.</p>
    <p>请输入一个有效的名字。</p>
  </div>
  <p id="err" class="err">Please enter a valid name.</p>
  <form id="login" action="">

    <div class="name-section form-group">
      <label class="section-label" for="name">Name / 名称 :</label>
      <input class="form-control" autofocus id="name" autocomplete="off">
    </div>

    <div class="lang-section">
      <label class="section-label" >Your Language / 你的语言 :</label>
      <label class="lang-option">
        <input type="radio" name="lang" value="en" checked>ENGLISH
      </label>
      <br>
      <label class="lang-option">
        <input type="radio" name="lang" value="zh-CN">中文
      </label>
    </div>

    <button class="btn btn-primary">Start / 开始</button>
  </form>
</div>
<div id="overlay" class="overlay"></div>

<!-- Main -->
<div class="sidebar">
  <div class="content">
    <h2>Chinglish</h2>
    <h4>Active Users<span style="float:right" id="activeCount"></span></h4>
    <ul id="activeUsers" class="active-users"></ul>
  </div>
</div>

<div class="main">
  <ul id="messages"></ul>
  <form id="chatInput" action="">
    <div class="input-section">
      <input id="m">
      <button>Send (开始)</button>
    </div>
  </form>
</div>
